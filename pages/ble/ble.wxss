/* pages/ble/ble.wxss */
 page {
  background-color: #63666B;
  height: 100%;
}.tui-tabbar-cell{
  display: table-cell;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  text-align: center;
}
.tui-tabbar-cell:not(:last-child){border-right: 1px solid #4da4dd;color: #fff;}
.tui-tabbar-cell.tui-active{background-color: #4da4dd;color: #fff;}

.top-4{
  display: inline-block;
  width: 16.6%;
  text-align: center;
}

.aux-change{
  display: table-cell;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;
}
.aux-change.not{
border-right: 1px solid #4da4dd;color: #fff;
}
.aux-change.focus{
background-color: #4da4dd;color: #fff;
}
.ui-click-hover{
   opacity: 0.9;
   background-color: rgb(160, 122, 122);
   transform: scale(0.9,0.9);
 }




